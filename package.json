{
	"name": "tabst",
	"productName": "Tabst",
	"version": "0.1.4",
	"description": "A minimal Guitar Tabs typewriter.",
	"type": "module",
	"main": "dist-electron/main.cjs",
	"scripts": {
		"dev": "concurrently -k \"pnpm dev:react\" \"pnpm dev:electron\"",
		"dev:react": "vite",
		"dev:electron": "concurrently -k \"pnpm watch:main\" \"nodemon --watch dist-electron --exec cross-env NODE_ENV=development electron .\"",
		"lint": "biome ci --linter-enabled=true --formatter-enabled=false --error-on-warnings src",
		"format": "biome check --write --formatter-enabled=true --linter-enabled=false --assist-enabled=true src",
		"format:check": "biome ci --formatter-enabled=true --linter-enabled=false --assist-enabled=true --enforce-assist=true --error-on-warnings src",
		"watch:main": "esbuild src/main/main.ts src/main/preload.ts --bundle --platform=node --outdir=dist-electron --out-extension:.js=.cjs --external:electron --format=cjs --watch",
		"build:main": "esbuild src/main/main.ts src/main/preload.ts --bundle --platform=node --outdir=dist-electron --out-extension:.js=.cjs --external:electron --format=cjs",
		"build": "pnpm type-check && pnpm build:react && pnpm build:main",
		"build:react": "vite build",
		"type-check": "tsc --noEmit",
		"lint:fix": "biome check --write --linter-enabled=true --formatter-enabled=false --assist-enabled=true src",
		"check": "pnpm format:check && pnpm lint && pnpm type-check",
		"package": "pnpm build && electron-forge package",
		"make": "pnpm build && electron-forge make",
		"mix": "node scripts/codemix.js",
		"generate:commands": "node scripts/generate-alphatex-commands.js --output src/renderer/data/alphatex-commands.generated.json",
		"mix:main": "node scripts/codemix.js main",
		"mix:render": "node scripts/codemix.js render",
		"mix:doc": "node scripts/codemix.js doc",
		"mix:config": "node scripts/codemix.js config",
		"dist": "electron-builder --publish never",
		"dist:win": "electron-builder --win --x64 --publish never"
	},
	"keywords": [],
	"author": "Jay Bridge huajie8848@foxmail.com",
	"license": "ISC",
	"packageManager": "pnpm@10.28.0",
	"dependencies": {
		"@codemirror/lang-markdown": "^6.5.0",
		"@codemirror/stream-parser": "^0.19.9",
		"@coderline/alphatab": "^1.8.0",
		"@coderline/alphatab-language-server": "^1.7.1",
		"@radix-ui/react-dialog": "^1.1.15",
		"@radix-ui/react-popover": "^1.1.15",
		"@radix-ui/react-progress": "^1.1.8",
		"@radix-ui/react-scroll-area": "^1.2.10",
		"@radix-ui/react-select": "^2.2.6",
		"@radix-ui/react-separator": "^1.1.8",
		"@radix-ui/react-slider": "^1.3.6",
		"@radix-ui/react-slot": "^1.2.4",
		"@radix-ui/react-switch": "^1.2.6",
		"@radix-ui/react-tooltip": "^1.2.8",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"codemirror": "^6.0.2",
		"codemirror-languageserver": "^1.18.1",
		"color-convert": "^3.1.3",
		"electron-squirrel-startup": "^1.0.1",
		"lucide-react": "^0.556.0",
		"react": "^19.2.3",
		"react-dom": "^19.2.3",
		"tailwind-merge": "^3.4.0",
		"@types/fs-extra": "^11.0.4",
		"tmp-promise": "^3.0.3",
		"vscode-oniguruma": "^2.0.1",
		"zustand": "^5.0.8",
		"electron-log": "^5.4.3",
		"electron-updater": "^6.7.3"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.7",
		"@electron-forge/cli": "^7.10.2",
		"@electron-forge/maker-deb": "^7.10.2",
		"@electron-forge/maker-dmg": "^7.11.1",
		"@electron-forge/maker-rpm": "^7.10.2",
		"@electron-forge/maker-squirrel": "^7.11.1",
		"@electron-forge/maker-zip": "^7.10.2",
		"@electron-forge/plugin-auto-unpack-natives": "^7.10.2",
		"@electron-forge/plugin-fuses": "^7.10.2",
		"@electron/fuses": "^1.8.0",
		"@eslint/js": "^9.39.1",
		"@types/node": "^24.10.1",
		"@types/react": "^19.2.8",
		"@types/react-dom": "^19.2.3",
		"@vitejs/plugin-react": "^5.1.1",
		"autoprefixer": "^10.4.12",
		"concurrently": "^9.2.1",
		"cross-env": "^10.1.0",
		"electron": "^40.0.0",
		"esbuild": "^0.27.0",
		"eslint": "^9.39.1",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^7.0.1",
		"globals": "^16.5.0",
		"nodemon": "^3.1.11",
		"postcss": "^8.5.6",
		"shadcn": "^3.7.0",
		"tailwindcss": "^3.4.18",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.53.1",
		"vite": "^7.3.1",
		"electron-builder": "^24.9.0"
	},
	"build": {
		"appId": "com.liubin.tabst",
		"productName": "Tabst",
		"directories": {
			"output": "dist"
		},
		"files": [
			"dist-electron/**/*",
			"dist/**/*",
			"package.json"
		],
		"win": {
			"target": [
				{
					"target": "nsis",
					"arch": [
						"x64"
					]
				},
				{
					"target": "zip",
					"arch": [
						"x64"
					]
				}
			],
			"artifactName": "Tabst-${version}-win-${arch}-${name}.${ext}"
		},
		"nsis": {
			"oneClick": false,
			"perMachine": false,
			"allowToChangeInstallationDirectory": true
		},
		"publish": [
			{
				"provider": "github",
				"owner": "LIUBINfighter",
				"repo": "Tabst.app"
			}
		]
	},
	"files": [
		"dist-electron/**/*",
		"dist/**/*",
		"package.json"
	],
	"pnpm": {
		"onlyBuiltDependencies": [
			"electron",
			"esbuild"
		],
		"ignoredBuiltDependencies": [
			"electron-winstaller",
			"esbuild",
			"msw"
		]
	}
}
